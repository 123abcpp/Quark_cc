{
  "metadata": {
    "name": "pypackage1",
    "namespace": "ns1"
  },
  "spec": {
    "template": {
      "containers": [
        {
          "image": "localhost:5000/py_pod:latest",
          "name": "py_pod",
          "resources": {
            "requests": {
              "cpu": "500m",
              "memory": "1Gi"
            },
            "limits": {
              "cpu": "1",
              "memory": "2Gi"
            }
          }
        }
      ],
      "hostNetwork": true
    }
  }
}
